{
   "manifest_version": 2,
   "name": "Whitiefy",
   "version": "1.0",

   "description": "Makes the background of a webpage white!",

   "homepage_url": "https://github.com/krish-jb/Whitiefy",

   "icons": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg"
   },

   "permissions": ["tabs", "activeTab", "storage"],

   "background": {
      "scripts": ["process.js"],
      "persistent": false
   },

   "browser_action": {
      "default_icon": {
         "16": "icons/icon.svg",
         "32": "icons/icon.svg"
      },
      "default_title": "Whitiefy"
   },

   "content_scripts": [
      {
         "matches": ["<all_urls>"],
         "js": ["whitiefy.js"]
      }
   ],

   "browser_specific_settings": {
      "gecko": {
         "id": "whitiefy@TheBattleDog.ass"
      }
   }
}
