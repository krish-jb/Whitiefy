{
   "manifest_version": 2,
   "name": "Whitiefy",
   "version": "1.0",

   "description": "Makes the background of a webpage white!",

   "icons": {
      "48": "icons/icon.svg",
      "96": "icons/icon.svg"
   },

   "permissions": ["tabs", "activeTab", "storage"],

   "background": {
      "scripts": ["process.js"],
      "persistent": false,
      "type": "module"
   },

   "browser_action": {
      "default_icon": "icons/icon.png",
      "default_title": "Whitiefy"
   },

   "content_scripts": [
      {
         "matches": ["<all_urls>"],
         "js": ["whitiefy.js"]
      }
   ],

   "browser_specific_settings": {
      "gecko": {
         "id": "whitiefy@TheBattleDog.ass"
      }
   }
}
